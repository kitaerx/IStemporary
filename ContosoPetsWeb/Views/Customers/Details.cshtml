@model MusicShare.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="card-img" alt="Profile image.">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h5>
                    <br>@Html.DisplayFor(model => model.Address)
                    <br>@Html.DisplayFor(model => model.Phone)
                    <br>@Html.DisplayFor(model => model.Email)
                    <br>@Html.DisplayFor(model => model.BankAccount)</p>
                    <p class="card-text"><small class="text-muted">Last updated  @Html.DisplayFor(model => model.DateEdited).</small></p>
                </div>
            </div>
        </div>
    </div>

    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
